<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:background="@drawable/fondo_negro"
    android:orientation="vertical"
    tools:context="com.interfacesmoviles.carolinaperez.InstruccionesActivity">


    <!--CABECERA -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <!--BOTON ANTERIOR-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_lista"
            android:id="@+id/framePrevious"
            android:layout_gravity="center"
            android:padding="10dp">

            <Button
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/previous"
                android:id="@+id/previous" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_lista"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:text="INSTRUCCIONES"
                android:id="@+id/tituloInstrucciones"
                android:padding="10dp"
                />
        </FrameLayout>

        <!--BOTON SIGUIENTE-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_lista"
            android:id="@+id/frameNext"
            android:layout_gravity="center"
            android:padding="10dp">

            <Button
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/next"
                android:id="@+id/next" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/contenidoInstrucciones"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="15dp"/>

    <!--BOTON SALIR-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_lista"
        android:layout_gravity="center"
        android:padding="10dp">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/exit"
            android:id="@+id/exitInstrucciones" />
    </FrameLayout>





</LinearLayout>
