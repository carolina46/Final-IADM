<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    tools:context="com.interfacesmoviles.carolinaperez.OpcionesJugadorActivity">

        <!-- CABECERA -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@drawable/fondo_negro"
            android:id="@+id/cabeceraOpcionesJugador">

            <FrameLayout
                android:layout_centerInParent="true"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:paddingTop="15dp"
                android:background="@drawable/fotografia2"
                android:id="@+id/fotoColor">

                <ImageView
                    android:id="@+id/foto"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:paddingTop="90dp"
                    android:textColor="#000000"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPCIONES"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:id="@+id/tituloEdicion"
            android:layout_gravity="center"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:paddingLeft="50dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#FFFFFF"
                android:layout_marginBottom="30dp"/>
        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp">

            <!--EDITAR -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/item_lista"
                android:layout_gravity="center"
                android:layout_marginRight="20dp">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit"
                    android:layout_centerInParent="true"
                    android:id="@+id/editarJugador"/>
            </RelativeLayout>

            <!-- ELIMINAR -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/item_lista"
                android:layout_gravity="center"
                android:layout_marginRight="20dp">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/delete"
                    android:layout_centerInParent="true"
                    android:id="@+id/eliminarJugador"/>
            </RelativeLayout>

            <!-- BOTON INFORMACION -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/item_lista"
                android:layout_gravity="center">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/info"
                    android:layout_centerInParent="true"
                    android:id="@+id/informacionJugador"/>
            </RelativeLayout>
        </LinearLayout>

        <!-- BOTON SALIR -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/item_lista"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/exit"
                android:layout_centerInParent="true"
                android:id="@+id/exitEditarJugador"/>
        </RelativeLayout>
</LinearLayout>
