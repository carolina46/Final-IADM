<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    tools:context="com.interfacesmoviles.carolinaperez.PuntosJugadorActivity">


    <!-- CABECERA -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/fondo_negro"
        android:id="@+id/cabeceraPuntajes">

        <FrameLayout
            android:layout_centerInParent="true"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:paddingTop="15dp"
            android:background="@drawable/fotografia2"
            android:id="@+id/fotoColor">

            <ImageView
                android:id="@+id/foto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:paddingTop="90dp"
                android:textColor="#000000"
                android:layout_gravity="bottom|center_horizontal" />
        </FrameLayout>
        </RelativeLayout>

        <!-- PUNTAJE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUNTACIONES MÁXIMAS"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:id="@+id/maximaJugadorPuntajes"
                android:layout_gravity="center"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#FFFFFF"
                android:layout_marginBottom="20dp"/>


            <!-- MATEMATICA-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Matemática"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:id="@+id/puntuacionMateTitulo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:id="@+id/puntuacionMate"/>
                </LinearLayout>
            </RelativeLayout>



            <!-- NATURALES-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Naturales"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:id="@+id/puntuacionNatuTitulo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:id="@+id/puntuacionNatu"/>
                </LinearLayout>
            </RelativeLayout>


            <!-- LENGUA-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Lengua"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:id="@+id/puntuacionLenTitulo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:id="@+id/puntuacionLen"/>
                </LinearLayout>
            </RelativeLayout>



            <!-- MIX-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Mix"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:id="@+id/puntuacionMixTitulo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:id="@+id/puntuacionMix"/>
                </LinearLayout>
            </RelativeLayout>









            <!-- BOTON SALIR -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/item_lista"
                android:layout_gravity="center">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/exit"
                    android:layout_centerInParent="true"
                    android:id="@+id/exitFinJuego"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
