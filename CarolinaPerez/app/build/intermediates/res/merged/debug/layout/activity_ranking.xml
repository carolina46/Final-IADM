<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo_negro"
    android:orientation="vertical"
    tools:context="com.interfacesmoviles.carolinaperez.RankingActivity">


    <!-- TITULO -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_lista"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textColor="#FFFFFF"
            android:text="RANKING"
            android:id="@+id/ranking"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:text=""
            android:id="@+id/tituloCategoriaRanking"
            android:padding="10dp"
            />
    </LinearLayout>




    <!-- PODIO -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_gravity="center">

            <!--  PUESTO 1 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/layoutPrimero">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="110dp"
                    android:background="@drawable/item_lista"
                    android:id="@+id/layoutPrimerPuesto">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp"
                        android:text="1"
                        android:id="@+id/primerPuesto"
                        android:layout_gravity="center" />
                </FrameLayout>


                <!-- JUGADOR  -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:paddingTop="8dp"
                    android:background="@drawable/fotografia2"
                    android:layout_gravity="center"
                    android:id="@+id/layoutfotoPimero">

                    <ImageView
                        android:id="@+id/fotoPrimero"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/nombrePrimero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- PUNTOS -->
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/item_lista"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/layoutPpuntuacionPrimero">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/puntos"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/puntuacionPrimero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:text="0"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>



            <!--  PUESTO 2 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/layoutSegundo">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="110dp"
                    android:background="@drawable/item_lista"
                    android:id="@+id/layoutSegundoPuesto">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp"
                        android:text="2"
                        android:id="@+id/segundoPuesto"
                        android:layout_gravity="center" />
                </FrameLayout>

                <!-- JUGADOR  -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:paddingTop="8dp"
                    android:background="@drawable/fotografia2"
                    android:layout_gravity="center"
                    android:id="@+id/layoutfotoSegundo">

                    <ImageView
                        android:id="@+id/fotoSegundo"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/nombreSegundo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- PUNTOS -->
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/item_lista"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/layoutPpuntuacionSegundo">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/puntos"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/puntuacionSeundo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:text="0"/>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>


            <!--  PUESTO 3-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutTercero">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="110dp"
                    android:background="@drawable/item_lista"
                    android:id="@+id/layoutTercerPuesto">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp"
                        android:text="3"
                        android:id="@+id/tercerPuesto"
                        android:layout_gravity="center" />
                </FrameLayout>

                <!-- JUGADOR  -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:paddingTop="8dp"
                    android:background="@drawable/fotografia2"
                    android:layout_gravity="center"
                    android:id="@+id/layoutfotoTercero">

                    <ImageView
                        android:id="@+id/fotoTercero"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/nombreTercero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="3dp"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- PUNTOS -->
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/item_lista"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/layoutPpuntuacionTercero">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/puntos"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/puntuacionTercero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:text="0"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>



    <!-- SALIDA -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/item_lista">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/exit"
            android:layout_centerInParent="true"
            android:id="@+id/exitRanking"/>
    </RelativeLayout>

</LinearLayout>



